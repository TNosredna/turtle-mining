-- Just a first try to implement coords

position = {0,0,0}

local xDir,yDir = 0,1

function getX()
  return position[1]
end

function getY()
  return position[2]
end

function getZ()
 return position[3]
end

function up()
  if turtle.up() then
     position[3] = position[3] + 1
     return true
  else
     print("Pathfinding failed at ("..position[1]..","..position[2]..","..position[3]..")")
     return false
  end 
end 


function down()
  if turtle.down() then
     position[3] = position[3] - 1
     return true
  else 
     return false
  end 
end


function forward()
  if turtle.forward() then
 	   position[1] = position[1] + xDir
     position[2] = position[2] + yDir
 	   return true
  else
     return false
  end
end


function back()
  if turtle.back() then
 	   position[1] = position[1] - xDir
     position[2] = position[2] - yDir
 	   return true
  else 
     return false
  end
end    


function turnLeft()
  if turtle.turnLeft() then
     xDir, yDir = -yDir, xDir
 	   return true
  else 
     return false
  end
end   


function turnRight()
  if turtle.turnRight() then
     xDir, yDir = yDir, -xDir
     return true
  else 
     return false
  end
end


